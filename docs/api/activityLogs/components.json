{
  "components": {
    "schemas": {
      "ActivityLog": {
        "type": "object",
        "required": ["fieldName", "action"],
        "properties": {
          "fieldName": {
            "type": "string",
            "description": "The name of the field",
            "example": "User login"
          },
          "action": {
            "type": "string",
            "description": "The action performed",
            "example": "Login"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the log creation",
            "example": "2024-09-04T12:34:56Z"
          }
        }
      },
      "ActivityLogResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The ID of the created activity log",
            "example": 123
          },
          "message": {
            "type": "string",
            "description": "Confirmation message",
            "example": "Activity log created successfully."
          },
          "data": {
            "$ref": "#/components/schemas/ActivityLog"
          }
        }
      }
    }
  }
}
