{
  "paths": {
    "/api/ems/activityLogs/": {
    "post": {
      "tags": ["ActivityLogs"],
      "summary": "Create Activity Log",
      "description": "This endpoint allows the creation of a new activity log.",
      "operationId": "createActivityLog",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["fieldName", "action"],
              "properties": {
                "fieldName": {
                  "type": "string",
                  "description": "The name of the field",
                  "example": "User login"
                },
                "action": {
                  "type": "string",
                  "description": "The action performed",
                  "example": "Login"
                },
                "created_at": {
                  "type": "string",
                  "format": "date-time",
                  "description": "The timestamp of the log creation",
                  "example": "2024-09-04T12:34:56Z"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Successfully created activity log",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "The ID of the created activity log",
                    "example": 123
                  },
                  "message": {
                    "type": "string",
                    "description": "Confirmation message",
                    "example": "Activity log created successfully."
                  },
                  "data": {
                    "type": "object",
                    "required": ["fieldName", "action", "created_at"],
                    "properties": {
                      "fieldName": {
                        "type": "string",
                        "description": "The name of the field",
                        "example": "User login"
                      },
                      "action": {
                        "type": "string",
                        "description": "The action performed",
                        "example": "Login"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The timestamp of the log creation",
                        "example": "2024-09-04T12:34:56Z"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid input data",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "description": "Description of the error",
                    "example": "Invalid input data"
                  },
                  "code": {
                    "type": "integer",
                    "description": "Error code",
                    "example": 400
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized - Missing or invalid authentication token"
        },
        "500": {
          "description": "Internal server error"
        }
      }
    }
    }
  }
}
